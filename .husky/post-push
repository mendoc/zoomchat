# Hook post-push pour déploiement automatique
# Note: Git n'a pas de hook post-push natif
# Ce script doit être appelé manuellement ou via un alias

echo "🚀 Déploiement automatique en cours..."
npm run deploy

if [ $? -eq 0 ]; then
  echo "✅ Déploiement réussi"
else
  echo "❌ Échec du déploiement"
  exit 1
fi
