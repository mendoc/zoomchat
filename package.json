{
  "name": "zoomchat",
  "version": "10.0.1",
  "description": "Un assistant virtuel pour trouver des petites annonces dans le Zoom Hebdo",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "powershell -ExecutionPolicy Bypass -File scripts/dev-with-webhook.ps1",
    "dev:polling": "nodemon server.js",
    "deploy": "bash scripts/deploy.sh",
    "push": "git push && npm run deploy",
    "extract": "node scripts/extractor.js",
    "embedding": "node scripts/generateEmbeddings.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:first": "standard-version --first-release",
    "commit:auto": "bash scripts/version-and-commit.sh",
    "postinstall": "bash scripts/install-git-hook.sh"
  },
  "keywords": [
    "telegram",
    "bot",
    "zoom-hebdo",
    "classifieds"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.27.0",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "grammy": "^1.30.0",
    "mime": "^4.1.0",
    "pdf-lib": "^1.17.1",
    "pg": "^8.13.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "nodemon": "^3.1.9",
    "standard-version": "^9.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
